{
    "dataset": {
        "images_dirs": "dataset/train_sharp",
        "setA": "dataset/setA",
        "setB": "dataset/setB",
        "load": "runtime",
        "image_size": [256, 448],
        "gaussian_filters": [
            {"kernel_size": 3, "sigma": 0.3},
            {"kernel_size": 7, "sigma": 1},
            {"kernel_size": 11, "sigma": 1.6}
        ],
        "test_split": 0.2,
        "num_dirs": 2
    },
    "train": {
        "epochs": 2,
        "lr": 0.01,
        "batch_size": 16,
        "plots_dir": "plots",
        "batch_log_interval": 1
    }
}